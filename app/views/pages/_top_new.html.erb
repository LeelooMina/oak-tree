
<div class="top-sticky">
<div class="search-bar-container">
<form class="form-inline my-2 my-lg-0 ml-auto search-bar extra-round">
       <%= form_tag(acorns_path, method: :get) do %>
<div class="input-group">
  <%= text_field_tag :q, nil, class: "form-control extra-round-bar"  %>
   <div class="input-group-append">
  <%= submit_tag("Search", class: "btn btn-light mx-2 extra-round") %>
   </div>
        </div>
<% end %>
      </form>
</div>

<div class="top-new">
<ul>
<%= link_to root_path(@acorn, q: "Top") do %>
<li><b>Top</b></li>
<% end %>
<%= link_to root_path(@acorn, q: "New") do %>
<li><b>New</b></li>
<% end %>
</ul>
</div>
</div>


