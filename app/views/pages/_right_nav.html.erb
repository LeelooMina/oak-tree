<h3> Recomended Users: </h3>

<% @users = User.all.sample(5) %>
<div class="display-flex-column">
<% @users.each do |user| %>

  
    <%= link_to user do%>
          <%= image_tag url_for(user.profile_img), class: "profile-img" ,
            alt: "#{user.username}'s profile photo " %>
        
        <div class="acorn-user-info">
            <b>
              @<%= link_to user.username, user_path(user) %>
            </b>
            <% end %>
          

<hr>
<% end %>
</div>
