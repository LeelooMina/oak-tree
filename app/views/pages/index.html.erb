



<%
=begin%>
 

<h1>Acorns</h1>
<ul>
  <% @acorns.each do |acorn| %>
  <hr>
    <div class="user-info">
    <%= image_tag url_for(acorn.user.profile_img), class: 'img img-thumbnail rounded-circle profile-img', alt: "#{acorn.user.username}'s profile photo " %>
    <h2><%= acorn.user.username %></h2>
     <i><%= acorn.date_created.strftime("%m/%d/%Y")%></i>
    </div>
    <p><%= acorn.content %></p>
  <% end %>
</ul> 
<%
=end%>

<nav class="navbar navbar-expand-lg navbar-dark bg-success">
  <div class="container">
    <a class="navbar-brand" href="#">Oak Tree</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <form class="form-inline my-2 my-lg-0 ml-auto">
        <div class="input-group">
          <input class="form-control" type="search" placeholder="Search" aria-label="Search">
          <div class="input-group-append">
            <button class="btn btn-light mx-2" type="submit">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</nav>




  <div class="wrapper">
<div class="left-col border border-1">
  <%= render partial: 'shared/left_nav', locals: { acorns: @acorns} %>
</div>
  <div class="middle-col">
  <%= render partial: 'shared/acorn_display' %>
</div>
<div class="right-col border border-1">
  <%= render partial: 'shared/right_nav' %>
</div>

  </div>

