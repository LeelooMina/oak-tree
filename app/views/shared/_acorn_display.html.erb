<ul>
  <% @acorns.each do |acorn| %>
    <div class="user-info">
    <%= image_tag url_for(acorn.user.profile_img), class: 'img img-thumbnail rounded-circle profile-img', alt: "#{acorn.user.username}'s profile photo " %>
    <h2><%= acorn.user.username %></h2>
     <i><%= acorn.date_created.strftime("%m/%d/%Y")%></i>
    </div>
    <p><%= acorn.content %></p>
  <hr>
  <% end %>
</ul>
